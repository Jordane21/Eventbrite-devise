<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Events</h1>
  <hr>

  <table>
    <thead>
      <tr>
        <th>Evenement</th>
        <th>Description</th>
        <th>Date</th>
        <th>Lieu</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.name %></td>
          <td><%= event.description %></td>
          <td><%= event.date %></td>
          <td><%= event.location %></td>

          
          
          <td><a href= <%= "/events/#{event.id}"%>><button type="button" class="btn btn-success"> Voir</button> &nbsp &nbsp <br><br></td> &nbsp &nbsp
          <td><a href= <%= "/events/#{event.id}/edit"%>><button type="button" class="btn btn-warning"> Modifier</button> &nbsp &nbsp <br><br></td> &nbsp &nbsp
          <td><button type="button" class="btn btn-danger btn-small"><%= link_to 'Supprimer', event, method: :delete, data: { confirm: 'Hey, t&rsquo;es sur de toi ?' } %></button> &nbsp &nbsp <br><br></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <hr>
  &nbsp <br>
  <br>
  <a href= <%=new_event_path%>>
  <button type="button" class="btn btn-info"> Nouvel événement</button></a>
  


  
  </div>


